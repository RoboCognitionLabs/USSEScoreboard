@model IEnumerable<USSEScoreboard.Models.ScoreboardEntry>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Date Created
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                Scoreboard Item
            </th>
            <th>
                Assigned To
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.DateCreated.ToString("d")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @item.ScoreboardItem.Title
            </td>
            <td>
                @item.ScoreboardItem.UserProfile.FullName
            </td>

            <td>
                @*<a asp-action="Edit" asp-route-id="@item.ScoreboardEntryId">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.ScoreboardEntryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ScoreboardEntryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
